#include <iostream>

using namespace std;

int randbetween(int min, int max){
    return rand() % (max - min +1)+min;
}

int main()
{
    int N = 7;
    int arr[N][N];
    for (int i = 0;i<N;i++){
        for (int j = 0;j<N;j++){
            arr[i][j] = randbetween(10,99);
        }
    }
    for (int i = 0; i<N;i++){
        for (int j = 0;j<N;j++){
            cout << arr[i][j] << " ";
        }
        cout << endl;
    }
    cout << endl;
    
    for (int i =0;i<N;i++) {
        for (int j=0;j<N;j++){
            if(i+j>N) cout << arr[i][j] << " ";
            else cout << " ";
        }
        cout << endl;
    }
    
    
    

    return 0;
}
